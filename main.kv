<scrz>:
   
    BoxLayout:
        size_hint:1, 1
        id: rcycle
FloatLayout:
    
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            
            pos: self.pos
            size: self.size
    Image:
        size_hint:None,None
        size: root.width+500 ,root.height+1000
        source: "data/pic/image.jpg"
        allow_stretch: False
        pos_hint: {"center_x":.5, "center_y":.5}
    BoxLayout:
        orientation: "vertical"
        
        ScrollView:
            pos_hint: {'center_x': .5}
            size_hint:1,None
            height: "60dp"
            orientation: "horizontal"
            do_scroll_x: True
            id: bar
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .5
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint: None, 1
                adaptive_width: True
                width: self.minimum_width
                pos_hint: {"center_x":.5}

                id: bar_box



        ScreenManager:
            id: scrz_manager

                    

           



            
            
            
